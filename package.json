{
  "name": "netlify-ext-setup",
  "displayName": "netlify-ext-setup",
  "description": "Initial Setup for Netlify Extension",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.37.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.netlifyInit",
        "title": "Initialize Netlify"
      },
      {
        "command": "netlifyTreeView.refreshSiteData",
        "title": "Refresh"
      },
      {
        "command": "netlifyTreeView.sayHelloSarah",
        "title": "Say Hi To Sarah"
      },
      {
        "command": "netlifyTreeView.sayHelloTara",
        "title": "Say Hi To Tara"
      },
      {
        "command": "netlifyTreeView.openToNetlify",
        "when": "isNetlifySiteLinked == true",
        "title": "Open Netlify Admin UI"
      },
      {
        "command": "netlifyTreeView.openToSite",
        "when": "isNetlifySiteLinked == true",
        "title": "Open to Site"
      },
      {
        "command": "netlifyTreeView.deploy.Publish",
        "title": "Publish Deploy",
        "todo": "use icon https://code.visualstudio.com/api/extension-guides/tree-view#view-actions"
      },
      {
        "command": "netlifyTreeView.deploy.Lock",
        "title": "Lock"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "netlifytest",
          "title": "Netlify Test",
          "icon": "logo.svg"
        }
      ]
    },
    "views": {
      "netlifytest": [
        {
          "id": "netlifyTreeView",
          "name": "Netlify Extension Tree View"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "netlifyTreeView.refreshSiteData",
          "when": "view == netlifyTreeView",
          "group": "navigation"
        },
        {
          "command": "netlifyTreeView.sayHelloSarah",
          "when": "view == netlifyTreeView"
        },
        {
          "command": "netlifyTreeView.sayHelloTara",
          "when": "view == netlifyTreeView"
        },
        {
          "command": "netlifyTreeView.openToNetlify",
          "when": "view == netlifyTreeView && isNetlifySiteLinked == true"
        },
        {
          "command": "netlifyTreeView.openToSite",
          "when": "view == netlifyTreeView && isNetlifySiteLinked == true"
        }
      ],
      "view/item/context": [
        {
          "command": "netlifyTreeView.deploy.Publish",
          "when": "view == netlifyTreeView && viewItem == DeployTreeItem",
          "group": "inline"
        },
        {
          "command": "netlifyTreeView.deploy.Lock",
          "when": "view == netlifyTreeView && viewItem == DeployTreeItem"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "build": "npm run compile",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.12.21",
    "@types/vscode": "^1.37.0",
    "glob": "^7.1.4",
    "mocha": "^6.1.4",
    "tslint": "^5.12.1",
    "typescript": "^3.3.1",
    "vscode-test": "^1.0.2"
  },
  "dependencies": {
    "@netlify/cli-utils": "^1.1.0",
    "netlify": "^2.4.8"
  }
}
